{
  "name": "tabnews",
  "version": "0.0.1",
  "description": "Implementation for curso.dev",
  "main": "index.js",
  "scripts": {
    "dev": "npm run compose:up && npm run migration:up && next dev",
    "compose:up": "docker compose -f infra/compose.yaml up -d",
    "compose:stop": "docker compose -f infra/compose.yaml stop",
    "compose:down": "docker compose -f infra/compose.yaml down",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "test": "npm run compose:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand\"",
    "test:watch": "npm run compose:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --watchAll --runInBand\"",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "npm run wait-for-postgres && node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migration:down": "node-pg-migrate -m infra/migrations --envPath .env.development down",
    "wait-for-postgres": "node infra/scripts/wait-for-db.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "coderCadu",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run compose:down && npm run lint:prettier:check && npm run test"
    }
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.4",
    "dotenv-expand": "^11.0.6",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "husky": "^9.1.4",
    "jest": "^29.6.2",
    "prettier": "^3.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
